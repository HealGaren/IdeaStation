<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".activities.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ideaList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:textSize="@dimen/main_button_text_size"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:text="내 아이디어 리스트"/>

        <Button
            android:id="@+id/btn_searchPatent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:layout_marginTop="@dimen/main_button_margin_top"
            android:textSize="@dimen/main_button_text_size"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:text="특허청 검색하기"/>

        <Button
            android:id="@+id/btn_ideaVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:layout_marginTop="@dimen/main_button_margin_top"
            android:textSize="@dimen/main_button_text_size"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:text="아이디어 영상 자료" />
    </LinearLayout>
</LinearLayout>
