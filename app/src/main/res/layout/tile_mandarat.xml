<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/mandarat_edit_full_size"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_left_up"
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="↖"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_up"
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="↑"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_right_up"
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="↗"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="259dp">

            <Button
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_round_rect_maincolor"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/btn_left"
                android:text="←"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mandarat_line_width"
                android:background="@color/colorMandaratLine"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mandarat_edit_size">

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mandarat_line_width"
                android:background="@color/colorMandaratLine"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mandarat_edit_size">

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>


                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mandarat_line_width"
                android:background="@color/colorMandaratLine"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mandarat_edit_size">

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>
                <LinearLayout
                    android:layout_width="@dimen/mandarat_edit_size"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/mandarat_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorMandaratLine"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mandarat_line_width"
                android:background="@color/colorMandaratLine"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="259dp">

            <Button
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_round_rect_maincolor"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="→"
                android:id="@+id/btn_right"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/mandarat_edit_full_size"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/btn_left_down"
            android:text="↙"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Button
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="↓"
            android:id="@+id/btn_down"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_round_rect_maincolor"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/btn_right_down"
            android:text="↘"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>